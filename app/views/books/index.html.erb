<% if flash[:delete] %>
	<p id="notice"><%= flash[:delete] %></p>
<% end %>

<h1>Books</h1>

<table>
	<thead>
		<tr>
			<th>Title</th>
			<th>Body</th>
			<th></th>
		</tr>
	</thead>
	<tbody>
		<% @books.each do |book| %>
		<tr>
			<td><%= book.title %></td>
			<td><%= book.body %></td>
			<td><%= link_to "Show", book_path(book.id) %></td>
			<td><%= link_to "Edit", edit_book_path(book.id) %></td>
			<td><%= link_to "Destroy", book_path(book.id), method: :delete, data: { confirm: "Are you sure?" }  %></td>
		</tr>
		<% end %>
	</tbody>
</table>

<h2>New book</h2>

<% if flash[:notice] %>
	<p><%= flash[:notice] %></p>
<% end %>

<%= form_for(@book) do |f| %>

	<div class="field">
		<h4>Title</h4>
		<%= f.text_field :title %>
	</div>

	<div class="field">
		<h4>Body</h4>
		<%= f.text_area :body %>
	</div>

	<div class="actions">
		<%= f.submit 'Create Book' %>
	</div>
<% end %>